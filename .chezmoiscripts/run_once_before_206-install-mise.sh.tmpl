#!/usr/bin/env bash

{{ if eq .chezmoi.os "linux" -}}

set -euo pipefail

# Pretty print functions
info()    { echo -e "\033[1;34m[INFO]\033[0m $*"; }
warn()    { echo -e "\033[1;33m[WARN]\033[0m $*"; }
error()   { echo -e "\033[1;31m[ERROR]\033[0m $*"; }
success() { echo -e "\033[1;32mâœ… $*\033[0m"; }

{{ if (or (eq .chezmoi.osRelease.id "endeavouros") (eq .chezmoi.osRelease.id "cachyos")) }}

info ">>> Installing Mise"

curl https://mise.run | sh
success "Installed Mise Version:$(~/.local/bin/mise --version)"


{{ end }}
{{ end -}}

~/.local/bin/mise use --global node@24 # install node 24 and set it as the global default
~/.local/bin/mise use -g npm:npx
~/.local/bin/mise use -g npm:prettier
success ">>> Mise Installed"
