#!/usr/bin/env bash
# vim: filetype=bash

set -euo pipefail
export PATH="$HOME/.local/bin/:$PATH"


# Pretty print functions
info()    { echo -e "\033[1;34m[INFO]\033[0m $*"; }
warn()    { echo -e "\033[1;33m[WARN]\033[0m $*"; }
error()   { echo -e "\033[1;31m[ERROR]\033[0m $*"; }
success() { echo -e "\033[1;32mâœ… $*\033[0m"; }

{{ if (or (eq .chezmoi.osRelease.id "arch") (eq .chezmoi.osRelease.id "cachyos")) }}

info "Installing Arch packages"

sudo pacman -Syu --noconfirm --needed {{ range .packages.linux.arch.core }} {{.}}{{end}} {{ range .packages.linux.arch.extra }} {{.}}{{end}} {{ range .packages.linux.arch.multilib }} {{.}}{{end}}


if type -P paru >/dev/null 2>&1; then
  paru -Syu --noconfirm --needed {{ range .packages.linux.arch.aur }} {{.}}{{ end }}
elif type -P yay >/dev/null 2>&1; then
  # yay -Syu --needed {{ range .packages.linux.arch.aur }} {{.}}{{ end }}
  yay -Syu --noconfirm --needed {{ range .packages.linux.arch.aur }} {{.}}{{ end }}
fi

success "Installed Arch packages"


{{ else }}

error "This script is only for Arch based systems. Exiting..."
exit 1

{{ end }}
