#!/usr/bin/env bash

set -euo pipefail

# Pretty print functions
info()    { echo -e "\033[1;34m[INFO]\033[0m $*"; }
warn()    { echo -e "\033[1;33m[WARN]\033[0m $*"; }
error()   { echo -e "\033[1;31m[ERROR]\033[0m $*"; }
success() { echo -e "\033[1;32mâœ… $*\033[0m"; }

#Install Claude Code
info ">>> Installing Claude Code"

if [ -f ~/.local/bin/mise ]; then
 ~/.local/bin/mise activate
 ~/.local/bin/mise activate --shims
fi

success ">>>> NPM Path: $(npm -v)" 
success ">>>> NPM Version: $(which npm)" 

npm install -g @anthropic-ai/claude-code
success ">>> Claude Code Installed Version: $(claude --version)"

npm install -g @musistudio/claude-code-router # ccr code, ccr ui, ccr start , ccr model
success ">>> Claude Code Router Installed Version: $(ccr -v)"


