#!/usr/bin/env bash

set -euo pipefail

# Pretty print functions
info()    { echo -e "\033[1;34m[INFO]\033[0m $*"; }
warn()    { echo -e "\033[1;33m[WARN]\033[0m $*"; }
error()   { echo -e "\033[1;31m[ERROR]\033[0m $*"; }
success() { echo -e "\033[1;32m✅ $*\033[0m"; }

#Install OpenSpec CLI -> Spec Framework
info ">>> Installing OpenSpec CLI"

# PATH correto para ambiente não-interativo
export PATH="$HOME/.local/bin:$HOME/.local/share/mise/shims:$PATH"

OPENSPEC_NO_COMPLETIONS=1 npm install -g @fission-ai/openspec@latest
mkdir -p "$HOME/.local/share/zsh/site-functions"
openspec completion generate zsh > ~/.local/share/zsh/site-functions/_openspec

success ">>> OpenSpec Cli Installed Version: $(openspec --version)"

